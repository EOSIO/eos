#pragma once

#include <apifiny/testing/tester.hpp>

#define CORE_SYM_NAME "${CORE_SYMBOL_NAME}"
#define CORE_SYM_PRECISION 4

#define _STRINGIZE1(x) #x
#define _STRINGIZE2(x) _STRINGIZE1(x)

#define CORE_SYM_STR ( _STRINGIZE2(CORE_SYM_PRECISION) "," CORE_SYM_NAME )
#define CORE_SYM  ( ::apifiny::chain::string_to_symbol_c( CORE_SYM_PRECISION, CORE_SYM_NAME ) )

struct core_sym {
   static inline apifiny::chain::asset from_string(const std::string& s) {
      return apifiny::chain::asset::from_string(s + " " CORE_SYM_NAME);
   }
};

// CN -> contract C++ name, C -> contract name, D -> top level directory
#define MAKE_READ_WASM_ABI(CN,C, D) \
   static std::vector<uint8_t> CN ## _wasm() { return read_wasm("${CMAKE_BINARY_DIR}/unittests/" #D "/" #C "/" #C ".wasm"); } \
   static std::vector<char> CN ## _abi() { return read_abi("${CMAKE_BINARY_DIR}/unittests/" #D "/" #C "/" #C ".abi"); }

namespace apifiny {
   namespace testing {
      struct contracts {
         // Contracts in `apifiny/unittests/contracts' directory
         MAKE_READ_WASM_ABI(apifiny_bios,   apifiny.bios, contracts)
         MAKE_READ_WASM_ABI(apifiny_msig,   apifiny.msig, contracts)
         MAKE_READ_WASM_ABI(apifiny_system, apifiny.system, contracts)
         MAKE_READ_WASM_ABI(apifiny_token,  apifiny.token,  contracts)
         MAKE_READ_WASM_ABI(apifiny_wrap,   apifiny.wrap,   contracts)

         MAKE_READ_WASM_ABI(before_producer_authority_apifiny_bios,   apifiny.bios, contracts/old_versions/v1.7.0-develop-preactivate_feature)
         MAKE_READ_WASM_ABI(before_preactivate_apifiny_bios,          apifiny.bios, contracts/old_versions/v1.6.0-rc3)

         // Contracts in `apifiny/unittests/unittests/test-contracts' directory
         MAKE_READ_WASM_ABI(asserter,              asserter,              test-contracts)
         MAKE_READ_WASM_ABI(deferred_test,         deferred_test,         test-contracts)
         MAKE_READ_WASM_ABI(get_sender_test,       get_sender_test,       test-contracts)
         MAKE_READ_WASM_ABI(get_table_test,        get_table_test,        test-contracts)
         MAKE_READ_WASM_ABI(noop,                  noop,                  test-contracts)
         MAKE_READ_WASM_ABI(payloadless,           payloadless,           test-contracts)
         MAKE_READ_WASM_ABI(proxy,                 proxy,                 test-contracts)
         MAKE_READ_WASM_ABI(ram_restrictions_test, ram_restrictions_test, test-contracts)
